<div class="center">
<div class="container">
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
		<div class="thumbnail">
			<%= image_tag listing.image.url(:medium) %><br/>
        	<div class="caption">
				<h3><%= listing.name %></h3>
		        <p><%= listing.description %></p>
		        <span class="badge"><%= number_to_currency listing.price %></span>
				<p>
		        <%= link_to 'Show', listing, class: 'btn btn-primary' %>
		        <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-default' %>
		        <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %>
			</p>
			</div><!--/.caption -->
      </div><!--/.thumbnail -->
	</div><!--/.col-md-3 -->
    <% end %>
</div><!--/.row -->
</div><!--/.container -->
</div><!--/.center -->
<h1>Listing listings</h1>


<br>

